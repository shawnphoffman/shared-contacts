# Shared Contacts - Production Environment Variables
# Copy this file to .env and update with your values

# =============================================================================
# REQUIRED - Database Configuration
# =============================================================================
POSTGRES_USER=sharedcontacts
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=sharedcontacts
POSTGRES_PORT=5432

# =============================================================================
# REQUIRED - Authentication
# =============================================================================
# Generate a secure random string: openssl rand -base64 32
BETTER_AUTH_SECRET=CHANGE_ME_GENERATE_SECRET

# =============================================================================
# REQUIRED - Application URLs
# =============================================================================
# Set this to your public URL (e.g., https://contacts.example.com)
# For local testing, use http://localhost:3030
BETTER_AUTH_URL=http://localhost:3030

# =============================================================================
# Optional - Service Ports
# =============================================================================
# Change these if ports conflict with other services
UI_PORT=3030
RADICALE_PORT=5232
API_PORT=3001

# =============================================================================
# Optional - Sync Configuration
# =============================================================================
# Sync interval in milliseconds (default: 5000 = 5 seconds)
SYNC_INTERVAL=5000
