# Shared Contacts - Production Environment Variables
# Copy this file to .env and update with your values

# =============================================================================
# REQUIRED - Database Configuration
# =============================================================================
POSTGRES_USER=sharedcontacts
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=sharedcontacts
POSTGRES_PORT=5432

# =============================================================================
# Optional - Service Ports
# =============================================================================
# Change these if ports conflict with other services
UI_PORT=3030
RADICALE_PORT=5232
API_PORT=3001

# =============================================================================
# Optional - Sync Configuration
# =============================================================================
# Sync interval in milliseconds (default: 30000 = 30 seconds)
SYNC_INTERVAL=5000
