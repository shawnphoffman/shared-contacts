# Shared Contacts - Production Environment Variables
# Copy this file to .env and update with your values

# =============================================================================
# REQUIRED
# =============================================================================
POSTGRES_USER=sharedcontacts
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# =============================================================================
# OPTIONAL
# =============================================================================
# Management UI port
UI_PORT=3030
# Sync interval in milliseconds (default: 30000 = 30 seconds)
SYNC_INTERVAL=30000
# Public URLs for CardDAV connection page (optional - used for display only)
# If not set, URLs will be derived from the current location
# PUBLIC_UI_URL=https://contacts.example.com
# PUBLIC_CARDDAV_URL=https://carddav.example.com

